<resources>

    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">#ffffff</item>

        <item name="android:textColorSecondary">#ffffff</item>
    </style>








    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppMyTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"></style>


    <style name="style_common_text">
        <item name="android:text">@string/str_name</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="style_common_bottom_text_view" parent="style_common_text">
        <item name="android:layout_width">@dimen/bottom_button_width</item>
        <item name="android:layout_height">@dimen/bottom_button_height</item>
        <item name="android:text">@string/str_has_selected</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_bottom_text_next</item>
    </style>






    <style name="style_transfer_large_text_view" parent="style_common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_40</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/str_0</item>
    </style>

    <style name="style_transfer_unit_text_view" parent="style_common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/str_unit_mb</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
